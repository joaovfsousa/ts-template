{
  "name": "ts-template",
  "version": "0.0.0",
  "description": "Template for ts projects",
  "author": "joaovfsousa@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "swc src --out-dir dist --source-maps --config-file .swcrc.build",
    "build:tsc": "tsc --build tsconfig.build.json",
    "dev": "nodemon --watch src --exec \"pnpm start\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "lint-staged",
    "lint:dev": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --fix --ext .js,.ts",
    "prepare": "husky install",
    "start": "ts-node --swc src/index.ts",
    "start:tsc": "ts-node src/index.ts",
    "test": "pnpm run test:unit",
    "test:all": "jest",
    "test:all:watch": "pnpm run test:unit -- --watch",
    "test:all:cov": "pnpm run test:unit --coverage",
    "test:e2e": "jest --runInBand --config ./test/jest.e2e.ts",
    "test:e2e:watch": "pnpm run test:e2e -- --watch",
    "test:integration": "jest --runInBand --config ./test/jest.integration.ts",
    "test:integration:watch": "pnpm run test:integration -- --watch",
    "test:unit": "jest --config ./test/jest.unit.ts",
    "test:unit:watch": "pnpm run test:unit -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.9.2",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
